generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Commit {
  id                String   @id @default(cuid())
  sha               String   @unique
  repository        String
  branch            String
  author            String
  messageShort      String
  messageFull       String
  commitUrl         String
  pullRequestUrl    String?
  commitType        String
  filesChangedCount Int
  insertions        Int
  deletions         Int
  isMergeCommit     Boolean  @default(false)
  committedAt       DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([committedAt])
  @@index([repository])
  @@index([branch])
  @@index([author])
  @@index([commitType])
  @@index([isMergeCommit])
}
